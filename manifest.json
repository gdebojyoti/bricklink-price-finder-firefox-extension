{
  "manifest_version": 2,
  "name": "bricklink-price-finder",
  "version": "0.1",

  "description": "Look up and store prices across different BrickLink item pages",

  "icons": {
    "48": "icons/bpf-48.jpg"
  },

  "background": {
    "scripts": ["background/index.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/bpf-48.jpg"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*.bricklink.com/*"
  ]
}

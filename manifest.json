{
  "manifest_version": 2,
  "name": "bricklink-price-finder",
  "version": "0.1",

  "description": "Look up and store prices across different BrickLink item pages",

  "icons": {
    "48": "icons/bpf-48.jpg"
  },

  "browser_action": {
    "default_icon": "icons/bpf-48.jpg",
    "default_title": "B.F.P.",
    "default_popup": "popup/index.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*.bricklink.com/*"
  ]
}
